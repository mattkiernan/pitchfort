<div class="flash-errors">
  <% if flash[:error] %>
    <%= flash[:error] %>
<% end %>
</div>

<div class="page-header">
  <div class="page-title">
    <h2>Create a new pitch</h2>
  </div>

  <%= form_for @pitch, url: batch_pitches_path do |form| %>
    <div class="header-field">
      <% if @announcement.present? %>
        <h5><span class="header-name"><%= @announcement.name %></span></h5>
        <input type="hidden" value="<%= @announcement.id %>" name="pitch[announcement_id]" />
      <% else %>
          <%= form.collection_select(:announcement_id, @announcement_list, :id, :name, {}, {class:"client-list"}) %>
      <% end %>
    </div>
</div>

<div class="page-content">
  <div class="form">
    <%= render "form", pitch_topic: @pitch_topic, form: form %>
  <% end %>
  </div>
  <div class="reminder">
    <h4>Adding new journalists</h4>
    <p>Complete the form below to add new journalists</p>
    <p>Be sure to include the journalit's correct email address!</p>
    <p>Have more than one journalist? Click the "upload journalists" button
    above to import multiple journlaists at once.</p>
  </div>
</div>
