<div class="page-header">
  <h2 class="page-title">Announcements</h2>
    <div class="header-button">
      <% if @client.present? %>
        <%= link_to "Create new announcement",
          new_announcement_path(client_id: @client.id),
          method: :get, class: "button" %>
      <% else %>
        <%= link_to "Create new announcement", new_announcement_path,
          method: :get, class: "button" %> <% end %>
    </div>
</div>

<div class="page-content">
  <table class="table-minimal">
    <theader>
    <th>Client</th>
    <th>Announcement</th>
    <th>Date</th>
    <th>Pitches</th>
    <th>Acceptance Rate</th>
    </theader>
    <%= render @announcements %>
  </table>
</div>
